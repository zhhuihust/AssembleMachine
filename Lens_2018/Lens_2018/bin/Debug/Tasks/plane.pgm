ACKNOWLEDGEALL

ENABLE X Y YY

INCREMENTAL

IF $GLOBAL[43]==0 THEN
   RAMP RATE X $GLOBAL[42]
   WHILE 1
      RAPID X$GLOBAL[40] XF$GLOBAL[41]
	  RAPID X-$GLOBAL[40] XF$GLOBAL[41]
   ENDWHILE
ELSEIF $GLOBAL[43]==1 THEN
   RAMP RATE Y $GLOBAL[42]
   WHILE 1
      RAPID Y$GLOBAL[40] YF$GLOBAL[41]
	  RAPID Y-$GLOBAL[40] YF$GLOBAL[41]
   ENDWHILE
ELSE
   RAMP RATE YY $GLOBAL[42]
   WHILE 1
      RAPID YY$GLOBAL[40] YYF$GLOBAL[41]
	  RAPID YY-$GLOBAL[40] YYF$GLOBAL[41]
   ENDWHILE
ENDIF

END PROGRAM